  <script>
    const noMessages = [
      "Hayƒ±r", "Emin misin", "Ger√ßekten Emin misin?", "Tam olarak emin olduƒüunu s√∂yleyebilir misin?",
      "Bir daha d√º≈ü√ºn l√ºtfen!", "Hayƒ±r dersen √ßok √ºz√ºl√ºr√ºm...", "Ger√ßekten √ßok √ºz√ºl√ºr√ºm...",
      "√áok ama √ßok √ºz√ºl√ºr√ºm...", "Peki tamam, artƒ±k sormayacaƒüƒ±m..."
    ];
    let index = 0;
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const mainContent = document.getElementById("mainContent");
    const finalPage = document.getElementById("finalPage");
    const blushLefts = document.querySelectorAll(".blushLeft");
    const blushRights = document.querySelectorAll(".blushRight");
    const smiles = document.querySelectorAll(".smile");

    function updateButtons() {
      if (index < noMessages.length) {
        noBtn.textContent = noMessages[index];
        noBtn.style.display = "inline-block";
      } else {
        noBtn.style.display = "none";
      }

      yesBtn.style.fontSize = (20 + index * 10) + "px";
      yesBtn.style.padding = (15 + index * 10) + "px 0";

      let noFontSize = 20 - index * 1.5;
      if (noFontSize < 12) noFontSize = 12;
      noBtn.style.fontSize = noFontSize + "px";
      noBtn.style.padding = "10px 0";

      if (index === noMessages.length) {
        yesBtn.style.fontSize = "96px";
        yesBtn.style.padding = "60px 0";
        yesBtn.style.borderRadius = "0";
        yesBtn.style.width = "100vw";
        yesBtn.style.height = "100vh";
        yesBtn.style.maxWidth = "none";
      }

      if (index >= 7) {
        blushLefts.forEach(b => b.style.opacity = 1);
        blushRights.forEach(b => b.style.opacity = 1);
        smiles.forEach(s => s.style.opacity = 1);
      } else {
        blushLefts.forEach(b => b.style.opacity = 0);
        blushRights.forEach(b => b.style.opacity = 0);
        smiles.forEach(s => s.style.opacity = 0);
      }
    }

    yesBtn.addEventListener("click", () => {
      mainContent.style.display = "none";
      finalPage.style.display = "block";
    });

    noBtn.addEventListener("click", () => {
      if (index < noMessages.length) {
        index++;
        updateButtons();
      }
    });

    updateButtons();
  </script>
